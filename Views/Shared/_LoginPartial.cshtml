@using Microsoft.AspNetCore.Identity
@using Asernatat_3.Areas.Identity.Data

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li class="mt-3">
                <a class="my-exampl mr-3 ml-0 text-decoration-none" id="manage" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"><strong>Hello @UserManager.GetUserName(User)!</strong></a>
            </li>
            <li>
                <button  type="submit" class="btn btn-link navbar-btn navbar-link color-links border rounded my-border text-decoration-none"><strong>Logout</strong></button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li class="nav-item">
            <a class="nav-link color-links border rounded my-border" id="login" asp-area="Identity" asp-page="/Account/Login"><strong>Login</strong></a>
        </li>
    </ul>
}
