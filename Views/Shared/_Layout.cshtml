@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no" />
    <title>@ViewData["Title"] - Asernatat_3</title>
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        .footer-classic {
            color: #ffffff;
            background: linear-gradient(to right, #1a423f, #1d2c2c);
            position: absolute;
            z-index: 1;
            width: 100%;
        }
        .my-color {
            color: #ffffff;
            background: linear-gradient(to right, #1a423f, #1d2c2c);
        }

        .my-color-loggin {
            color: #ffffff;
            background: linear-gradient(to right, rgba(26, 66, 63, 0.75), rgba(29, 44, 44, 0.75));
        }

        .myy-colorr {
            background: linear-gradient(to right, #364534, #2c3f2a);
        }

        ul, ol {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .social-inner {
            display: flex;
            flex-direction: column;
            align-items: center;
            width: 100%;
            padding: 23px;
            font: 900 13px/1 "Lato", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
            text-transform: uppercase;
            color: #000000;
        }

        .col-my {
            color: #000000;
            border-color: #000000;
        }
            .col-my:focus {
                box-shadow: 0 0 0 0.2rem rgba(064, 250, 233, 0.5);
            }

        .color-links {
            color: #000000 !important;
        }

            .color-links:visited {
                color: #000000;
            }

            .color-links:hover {
                color: #57fbeb !important;
                background-color: #1c3735;
                transition: .59s ease;
                box-shadow: 0 0 0 0.2rem rgba(064, 250, 233, 0.5);
            }

            .color-links:active {
                color: #000000;
            }

            .color-links:disabled {
                color: #000000;
                background-color: transparent;
            }

            .color-links:not(:disabled):active {
                color: #000000;
                background-color: #315752;
                border-color: #57fbeb;
            }

                .color-links:not(:disabled):active:focus {
                    box-shadow: 0 0 0 0.2rem rgba(064, 250, 233, 0.5);
                }

        .worlds {
            color: #000000 !important;
        }

            .worlds:visited {
                color: #000000;
            }

            .worlds:hover {
                color: #57fbeb !important;
                transition: .59s ease;
                box-shadow: 0 0 0 0.2rem rgba(064, 250, 233, 0.5);
            }

            .worlds:not(:disabled):active {
                color: #000000;
                border-color: #57fbeb;
            }

                .worlds:not(:disabled):active:focus {
                    box-shadow: 0 0 0 0.2rem rgba(064, 250, 233, 0.5);
                }


        .btn-outline-mycolor {
            color: #57fbeb;
            border-color: #57fbeb;
        }

            .btn-outline-mycolor:hover {
                color: #212529;
                background-color: #57fbeb;
                border-color: #57fbeb;
            }

            .btn-outline-mycolor.focus, .btn-outline-mycolor:focus {
                box-shadow: 0 0 0 .2rem rgba(87,251,235,.5)
            }

            .btn-outline-mycolor.disabled, .btn-outline-mycolor:disabled {
                color: #57fbeb;
                background-color: transparent;
            }

            .btn-outline-mycolor:not(:disabled):not(.disabled).active, .btn-outline-mycolor:not(:disabled):not(.disabled):active, .show > .btn-outline-mycolor.dropdown-toggle {
                color: #212529;
                background-color: #57fbeb;
                border-color: #57fbeb;
            }

                .btn-outline-mycolor:not(:disabled):not(.disabled).active:focus, .btn-outline-mycolor:not(:disabled):not(.disabled):active:focus, .show > .btn-outline-mycolor.dropdown-toggle:focus {
                    box-shadow: 0 0 0 .2rem rgba(87,251,235,.5)
                }


        .my-exampl {
            color: #000000;
        }

            .my-exampl:hover {
                color: #57fbeb !important;
                transition: .59s ease;
            }

        .my-border {
            border-color: black !important;
            border-width: 3px !important;
        }

        .my-input {
            background: linear-gradient(to right, #3d4c3a, #32462f);
            color: black !important;
            width: 100%;
        }

            .my-input:hover {
                box-shadow: 0 0 0 0.1rem rgba(064, 250, 233, 0.5);
            }

        .my-image {
            position: fixed;
            z-index: -9999;
            top: 0px;
            left: 0px;
        }

        h4, h1, a, p, label {
            color: black !important;
        }

        .text {
            color: black !important;
        }

        .borderColor {
            border-color: #000000 !important;
        }


        .coly {
            margin: 20px;
            border-color: black !important;
            border-width: 3px !important;
            border-radius: 4px;
        }

            .coly:visited {
                color: #000000;
                border-radius: 4px;
            }

            .coly:hover {
                color: #57fbeb !important;
                background-color: #1c3735;
                transition: .59s ease;
                box-shadow: 0 0 0 0.2rem rgba(064, 250, 233, 0.5);
                border-radius: 4px;
            }

            .coly:active {
                color: #000000;
                border-radius: 4px;
            }

            .coly:disabled {
                color: #000000;
                background-color: transparent;
                border-radius: 4px;
            }

            .coly:not(:disabled):active {
                color: #000000;
                background-color: #315752;
                border-color: #57fbeb;
                border-radius: 4px;
            }
    </style>
    <title>Rimmax</title>
</head>
<body>
    <a class="my-image" href="#"><img src="~/img/miniFon.jpg" /></a>
    <a name="base"></a>
    <header class=" sticky-top">
        <nav class="navbar navbar-expand-lg navbar-light sticky-top my-color border-bottom my-border">
            <a class="b" href="#">
                <img src="~/img/RimmaxL.jpg" class="rounded-circle" width="100" height="60" alt="">
            </a>
            <button class="navbar-toggler btn btn-outline-mycolor" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
                <div class="row justify-content-end mr-5">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item px-3 active">
                            <a class="nav-link color-links border rounded my-border" style="margin-bottom: 10px" asp-area="" asp-controller="Home" asp-action="Index">
                                <strong>
                                    Home
                                </strong>
                                <span class="sr-only">
                                    (current)
                                </span>
                            </a>
                        </li>
                        @if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
                        {
                            <li class="nav-item px-3">
                                <a class="nav-link color-links border rounded my-border" style="margin-bottom: 10px" asp-area="" asp-controller="UserManagement" asp-action="Index">
                                    <strong>
                                        Roles
                                    </strong>
                                </a>
                            </li>
                        }
                        <li class="nav-item px-3">
                            <a class="nav-link color-links border rounded my-border" style="margin-bottom: 10px" asp-area="" asp-controller="Category" asp-action="Index">
                                <strong>
                                    Theme
                                </strong>
                            </a>
                        </li>
                        <li class="nav-item px-3">
                            @if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
                            {
                                <a class="nav-link color-links border rounded my-border" style="margin-bottom: 10px" asp-area="" asp-controller="Order" asp-action="Index">
                                    <strong>
                                        To order
                                    </strong>
                                </a>
                            }
                            else
                            {
                                <a class="nav-link color-links border rounded my-border" style="margin-bottom: 10px" asp-area="" asp-controller="Order" asp-action="Create">
                                    <strong>
                                        To order
                                    </strong>
                                </a>
                            }
                        </li>
                        <li class="nav-item px-3">
                            <partial name="_LoginPartial" />
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid" style="min-height: 600px;">
        <div class="row">
            @RenderBody()
        </div>
    </div>

    <footer class="section footer-classic context-dark border-top my-border text-black">
        <div class="container">
            <div class="row row-30 pt-3">
                <div class="col-md-5 col-xl-6">
                    <div class="pr-xl-4">
                        <a class="brand" href="#base"> <img class="brand-logo-light" src="~/img/RimmaxL.jpg" alt="" width="150" height="90"> </a>
                        <p class="text">Text</p>
                        <!-- Rights-->
                        <p class="rights">
                            <span class="text">©  </span>
                            <span class="copyright-year text">2020</span>
                            <span> </span>
                            <span class="text">Waves</span>
                            <span class="text">. </span>
                            <span class="text">All Rights Reserved.</span><br>
                            &copy; 2020 - Asernatat_3 - <a class="color-links" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </p>
                    </div>
                </div>
                <div class="col-md-6">
                    <h5 class="text">Contacts</h5>
                    <dl class="contact-list">
                        <dt class="text">Address:</dt>
                        <dd class="text">exampl_address</dd>
                    </dl>
                    <dl class="contact-list">
                        <dt class="text">email:</dt>
                        <dd><a class="my-exampl" href="mailto:#">exampl_e-mail@mail.ru</a></dd>
                    </dl>
                    <dl class="contact-list">
                        <dt class="text">phones:</dt>
                        <dd>
                            <a class="my-exampl" href="tel:#">exampl_phone1</a> <span><br></span> <a class="my-exampl" href="tel:#">exampl_phone2</a>
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="row no-gutters">
            <div class="col coly border">
                <a class="social-inner col-my my-exampl" href="#">
                    <span class="icon mdi mdi-facebook"></span>
                    <span>Facebook</span>
                </a>
            </div>
            <div class="col coly border">
                <a class="social-inner col-my my-exampl" href="#">
                    <span class="icon mdi mdi-instagram"></span>
                    <span>instagram</span>
                </a>
            </div>
            <div class="col coly border">
                <a class="social-inner col-my my-exampl" href="#">
                    <span class="icon mdi mdi-twitter"></span>
                    <span>twitter</span>
                </a>
            </div>
            <div class="col coly border">
                <a class="social-inner col-my my-exampl" href="#">
                    <span class="icon mdi mdi-youtube-play"></span>
                    <span>google</span>
                </a>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

