
@model Asernatat_3.Models.Art

@{
    ViewData["Title"] = "Delete";
}
<div class="col" style="max-width: 50%"></div>
<div class="col my-4" style=" min-width: 350px; min-height: 530px;">
    <div class="my-color-loggin border rounded my-border container-fluid" style="z-index: -20;">
        <div class="my-4 mx-3">
            <div class="d-flex justify-content-center">
                <section class="mx-4 mt-2">
                    <h1>Delete</h1>

                    <h3 style="color: black;">Are you sure you want to delete this?</h3>
                    <div>
                        <h4>Art</h4>
                        <dl class="row">
                            <dd class="col-sm-10" style="color: black;">
                                @Html.DisplayFor(model => model.Name)
                            </dd>
                            <dd class="col-sm-10" style="color: black;">
                                @Html.DisplayFor(model => model.Description)
                            </dd>
                            <dd class="col-sm-10" style="color: black;">
                                <img src="~/img/@Html.DisplayFor(model => model.Img)" width="250" height="250" class="rounded" alt="">
                            </dd>
                        </dl>

                        <form asp-action="Delete" asp-route-cid="@ViewData["CatId"]">
                            <input type="hidden" asp-for="Id" />
                            <div class="row">
                                <div class="col" style="max-width: 50%"></div>
                                <div class="col" style="min-width: 175px">
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-primary  color-links border rounded my-border" style="background-color: #4682B4; width: 150px;">Delete</button>
                                    </div>
                                </div>
                                <div class="col" style="max-width: 50%"></div>
                            </div>
                            <a  class="my-exampl" asp-action="Index" asp-route-id="@ViewData["CatId"]">Back to List</a>
                        </form>
                    </div>
                </section>
            </div>
        </div>
    </div>

</div>
<div class="col" style="max-width: 50%"></div>
